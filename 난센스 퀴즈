#include <stdio.h>
int main()
{
    int T;
    scanf("%d",&T);
    for(int i=0;i<T;i++)
    {
        int A,B,C,D;
        scanf("%d %d %d %d",&A,&B,&C,&D);
        //총 25가지 경우의 수 전체 시도
        //A+B?C=D
        if(A+B+C==D){
            printf("%d+%d+%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A+B-C==D){
            printf("%d+%d-%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A+B*C==D){
            printf("%d+%d*%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A+B/C==D){
            printf("%d+%d/%d=%d\n",A,B,C,D);
            continue;
        }
            //////////////////
        else if(A-B+C==D){
            printf("%d-%d+%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A-B-C==D){
            printf("%d-%d-%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A-B*C==D){
            printf("%d-%d*%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A-B/C==D){
            printf("%d-%d/%d=%d\n",A,B,C,D);
            continue;
        }
            ///////////////
        else if(A*B+C==D){
            printf("%d*%d+%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A*B-C==D){
            printf("%d*%d-%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A*B*C==D){
            printf("%d*%d*%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A*B/C==D){
            printf("%d*%d/%d=%d\n",A,B,C,D);
            continue;
        }
            /////////////////////
        else if(A/B+C==D){
            printf("%d/%d+%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A/B-C==D){
            printf("%d/%d-%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A/B*C==D){
            printf("%d/%d*%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A/B/C==D){
            printf("%d/%d/%d=%d\n",A,B,C,D);
            continue;
        }
            //float 연산 파트
            //A.B파트 먼저
        else if((A+B/10)+C==D){
            printf("%d.%d+%d=%d\n",A,B,C,D);
            continue;
        }
        else if((A+B/10)-C==D){
            printf("%d.%d-%d=%d\n",A,B,C,D);
            continue;
        }
        else if((A+B/10)*C==D){
            printf("%d.%d*%d=%d\n",A,B,C,D);
            continue;
        }
        else if((A+B/10)/C==D){
            printf("%d.%d/%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A+(B+C/10)==D){
            printf("%d+%d.%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A-(B+C/10)==D){
            printf("%d-%d.%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A*(B+C/10)==D){
            printf("%d*%d.%d=%d\n",A,B,C,D);
            continue;
        }
        else if(A/(B+C/10)==D){
            printf("%d/%d.%d=%d\n",A,B,C,D);
            continue;
        }
    }
    return 0;
}
