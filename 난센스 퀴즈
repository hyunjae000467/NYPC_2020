#include <stdio.h>
int main() {
    int T;
    scanf("%d", &T);
    for (int i = 0; i < T; i++) {
        double a, b, c, d;
        bool alreadyout = false;
        scanf("%lf %lf %lf %lf", &a, &b, &c, &d);
        if (a + b - c == d) {
            alreadyout=true;
            printf("%.0f+%.0f-%.0f=%.0f\n", a, b, c, d);
        } else if (a - b + c == d) {
            alreadyout=true;
            printf("%.0f-%.0f+%.0f=%.0f\n", a, b, c, d);
        } else if (a * b + c == d) {
            alreadyout=true;
            printf("%.0f*%.0f+%.0f=%.0f\n", a, b, c, d);
        } else if (a * b - c == d) {
            alreadyout=true;
            printf("%.0f*%.0f-%.0f=%.0f\n", a, b, c, d);
        } else if (a + b * c == d) {
            alreadyout=true;
            printf("%.0f+%.0f*%.0f=%.0f\n", a, b, c, d);
        } else if (a - b * c == d) {
            alreadyout=true;
            printf("%.0f-%.0f*%.0f=%.0f\n", a, b, c, d);
        }
        int D = (int) d;
        if ((int) a / b * c == D) {
            alreadyout=true;
            printf("%d/%d*%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        if ((int) a / b - c == D) {
            alreadyout=true;
            printf("%d/%d-%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        if ((int) a / b + c == D) {
            alreadyout=true;
            printf("%d/%d+%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        if ((int) a * b / c == D) {
            alreadyout=true;
            printf("%d*%d/%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        if ((int) a + b / c == D) {
            alreadyout=true;
            printf("%d+%d/%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        if ((int) a - b / c == D) {
            alreadyout=true;
            printf("%d-%d/%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        if(alreadyout==true)
        {
            continue;
        }
        //소숫점 돌입 구간
        int A = (int) a;
        int B = (int) b;
        int C = (int) c;
        if (10*A*C+B*C == 10 * D) {
            printf("%d.%d*%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
        else if (10 * B * A + C * A == 10 * D) {
            printf("%d*%d.%d=%d\n", (int) a, (int) b, (int) c, (int) d);
        }
    }
    return 0;
}
