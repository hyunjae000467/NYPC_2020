#include <stdio.h>

int main() {
    int T;
    scanf("%d", &T);
    for (int i = 0; i < T; i++) {
        double a, b, c, d;
        scanf("%lf %lf %lf %lf", &a, &b, &c, &d);
        if (a + b - c == d) {
            printf("%.0f+%.0f-%.0f=%.0f\n", a, b, c, d);
        } else if (a - b + c == d) {
            printf("%.0f-%.0f+%.0f=%.0f\n", a, b, c, d);
        } else if (a * b + c == d) {
            printf("%.0f*%.0f+%.0f=%.0f\n", a, b, c, d);
        } else if (a * b - c == d) {
            printf("%.0f*%.0f-%.0f=%.0f\n", a, b, c, d);
        } else if (a * b / c == d) {
            printf("%.0f*%.0f/%.0f=%.0f\n", a, b, c, d);
        }
            //
        else if (a + b * c == d) {
            printf("%.0f+%.0f*%.0f=%.0f\n", a, b, c, d);
        } else if (a - b * c == d) {
            printf("%.0f-%.0f*%.0f=%.0f\n", a, b, c, d);
        } else if (a / b * c == d) {
            printf("%.0f/%.0f*%.0f=%.0f\n", a, b, c, d);
        }
        else if(a+b/c==d){
            printf("%.0f+%.0f/%.0f==%.0f\n",a,b,c,d);
        }
        //a.b*c
        else if(a*c+b*c/10==d){
            printf("%.0f.%.0f*%.0f=%.0f\n", a, b, c, d);
        }
        //b.c*a
        else if(b*a+c*a/10==d){
            printf("%.0f*%.0f.%.0f=%.0f\n", a, b, c, d);
        }
    }
    return 0;
}
